{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="{{ path('app_profile') }}" class="list-group-item list-group-item-action">
                    Informations relatives au compte
                </a>
                <a href="{{ path('app_history') }}" class="list-group-item list-group-item-action active">Historique & Factures</a>
                <a href="{{ path('app_privacy_policy') }}" class="list-group-item list-group-item-action">Confidentialité et données</a>
            </div>
        </div>
        
        <div class="col-md-9">
            <h2>Historique des commandes</h2>
            <div class="card mt-3 bg-grey">
                <div class="card-body">
                    {% if rdvs is empty %}
                        <p>Vous n'avez pas encore passé de commande.</p>
                    {% else %}
                        <ul class="list-group">
                            {% for rdv in rdvs %}
                                <li class="list-group-item d-flex justify-content-between align-items-center bg-grey">
                                    <div>
                                        <p>Date: {{ rdv.rdvDate|date('d/m/Y') }}</p>
                                        <p>Status: {{ rdv.rdvStatus }}</p>
                                        <p>Coupe: {{ rdv.rdvCut.cutName }}</p>
                                        <p>Coiffeur: {{ rdv.rdvCutter.firstName }} {{ rdv.rdvCutter.lastName }}</p>
                                        <p>Prix: {{ rdv.rdvPrice }} €</p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">
                    Informations relatives au compte
                </a>
                <a href="#" class="list-group-item list-group-item-action">Historique & Factures</a>
                <a href="#" class="list-group-item list-group-item-action">Confidentialité et données</a>
            </div>
        </div>
        <div class="col-md-9">
            <h2>Informations relatives au compte</h2>
            <div class="card mt-3 bg-grey">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3" style="flex-direction: column">
                        {% if app.user.profilepicture %}
                            <img src="{{ app.user.profilepicture }}" class="rounded-circle" width="100" height="100">
                        {% else %}
                            <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg" class="rounded-circle" width="100" height="100">
                        {% endif %}
                        <button class="btn btn-secondary mt-3">Modifier</button>
                    </div>
                    <h5>Informations de base</h5>
                    <ul class="list-group bg-grey">
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-grey">
                            <span style="color:black;">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                            <button class="btn btn-link">Modifier</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-grey">
                            <span style="color:black;">{{ app.user.phoneNumber }}</span>
                            <button class="btn btn-link">Modifier</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center bg-grey">
                            <span style="color:black;">{{ app.user.email }}</span>
                            <button class="btn btn-link">Modifier</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        {% if is_granted('ROLE_USER') %}
        <div class="col selectBtn">
            <button class="btn btn-light" onclick="window.location.href='/customer'">Réserver une coiffure</button>
        </div>
        {% endif %}
        {% if is_granted('ROLE_CUTTER') %}
        <div class="col selectBtn">
            <button class="btn btn-light" onclick="window.location.href='/cutter'">Je suis coiffeur</button>
        </div>
        {% endif %}
        {% if not is_granted('ROLE_CUTTER') and not is_granted('ROLE_USER') %}
            <div class="col selectBtn" style="flex-direction:column">
            <h1>Bienvenue sur Uber Cut</h1>
            <p>Le premier site de réservation de coupe à domicile.</p>
            <p>Connectez-vous ou inscrivez-vous pour accéder à nos services.</p>
            <br>
            <button class="btn btn-light" onclick="window.location.href='/login'">Connectez-vous</button>
            </div>
        {% endif %}
    </div>
{% endblock %}


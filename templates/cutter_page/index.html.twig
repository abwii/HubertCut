{% extends 'base.html.twig' %}

{% block content %}
    <div class="box">
        <div class="row">
            <div class="cell">
                <div class="container d-flex justify-content-center" style="flex-direction: column; align-items: center; margin-top:200px">
                    <div class="card mb-3">
                        <div class="top-container">
                            {% if app.user.profilepicture %}
                                <img src="{{ app.user.profilepicture }}" class="img-fluid profile-image" width="70">
                            {% else %}
                                <img src="https://st3.depositphotos.com/6672868/13701/v/450/depositphotos_137014128-stock-illustration-user-profile-icon.jpg" class="img-fluid profile-image" width="70">
                            {% endif %}
                            <div class="ml-3">
                                <h5 class="name">{{ app.user.firstName }}</h5>
                                <h5 class="name">{{ app.user.lastName }}</h5>
                                <p class="name">{{ app.user.email }}</p>
                            </div>
                        </div>
                        <div class="middle-container d-flex justify-content-between align-items-center mt-3 p-2">
                            <div class="dollar-div px-3">
                                <div class="round-div">{{ app.user.cutterCutsDone }}</div>
                            </div>
                            <div class="d-flex flex-column text-right mr-2">
                                <span class="current-balance">Rang</span>
                                <span class="amount">{{ app.user.cutterRank }}/5</span>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="top-container">
                            <div class="ml-3 form-container">
                                <form method="post" action="{{ path('update_cutter_description') }}">
                                    <textarea class="description" name="cutterdescription">{{ app.user.cutterdescription }}</textarea>
                                    <button type="submit" class="btn btn-primary">Modifier</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="top-container">
                            <div class="ml-3 form-container">
                                <form method="post" action="{{ path('update_cutter_cuts') }}">
                                    <h5>SÃ©lectionner les coupes :</h5>
                                    <ul class="list-group">
                                        {% for cut in cuts %}
                                            <li class="list-group-item">
                                                <input type="checkbox" name="cuts[]" value="{{ cut.id }}" {% if cut in app.user.cutterCuts %}checked{% endif %}>
                                                {{ cut.cutName }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                    <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="cell">
                <div class="d-flex flex-column justify-content-center align-items-center" style="height: 100%;">
                    <button id="search-btn" class="btn btn-primary my-3" onclick="search()">Rechercher un client</button>
                    <div id="spinner-loading" class="spinner-border hidden" role="status">
                        <span class="sr-only">En recherche de client...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var cutterStatus = "{{ cutter_status }}";
    </script>
    <script src="{{ asset('js/cutterScript.js') }}"></script>
{% endblock %}
